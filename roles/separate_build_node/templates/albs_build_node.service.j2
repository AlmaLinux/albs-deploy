[Unit]
Description=ALBS build node

[Service]
RemainAfterExit=no
Restart=on-failure
RestartSec=5s
Type=simple
User={{ service_user }}
Group={{ service_group }}
ExecStart={{ build_node_venv_directory }}/bin/python3 {{ build_node_working_directory }}/albs-node/almalinux_build_node.py

[Install]
WantedBy=multi-user.target
